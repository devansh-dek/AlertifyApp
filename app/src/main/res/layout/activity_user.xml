<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".mainActive">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/baseline_question_mark_24"
            />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"

            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom|center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartLocationTracking"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/btngrey"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:text="Start Sharing Location "
                android:textStyle="bold"

                app:cornerRadius="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStopLocationTracking"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/btngrey"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:text="Stop Sharing Location "
                app:cornerRadius="20dp" />
        </LinearLayout>
    </FrameLayout>
</layout>
