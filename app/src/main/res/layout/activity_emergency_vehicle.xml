<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".locationaccess.EmergencyVehicle"

        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"

            app:rippleColor="@color/black"
            app:srcCompat="@drawable/baseline_question_mark_24"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/baseline_linked_camera_24"
            />
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="#00000000">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartLocationTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:background="@drawable/btngrey"
android:textColor="@color/black"
                android:text="Start Journey"
                app:cornerRadius="20dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRemoveLocationTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btngrey"
                android:textColor="@color/black"

                android:layout_weight="1"
                android:padding="12dp"
                android:text="End Journey"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </FrameLayout>
</layout>
